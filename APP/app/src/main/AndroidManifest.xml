<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gymme">

    <!--Internet Permission-->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".app.GymMeApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name="com.gymme.app.ui.StartExercises.StartExercisesActivity" />
        <activity android:name="com.gymme.app.ui.MyWorksheet.WorksheetAdapter" />
        <activity android:name="com.gymme.app.ui.MyWorksheet.MyWorksheetActivity" />
        <activity android:name="com.gymme.app.ui.SplashScreen.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>